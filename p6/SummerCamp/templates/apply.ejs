<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<title>Application</title>
</head>

<body>
	<h1>Application</h1>
	<form action="/apply" method="post" id="form">
		<fieldset>
			<label><strong>Name:</strong> <input type="text" name="name"/></label>
			<label><strong>Email Address: </strong><input type="email" name="email"></label><br><br>
            <label><strong>GPA: </strong><input type="text" name="gpa"></label><br><br>
			<label><strong>Background Information: </strong><br>
			<textarea rows="5" cols="80" name="background"></textarea></label>
		</fieldset>
		<br>
		<input type="reset" />
		<input type="submit" value="Submit Application">
	</form>
	<script>
		document.getElementById('form').addEventListener('submit', (e) => checker(e))

		function checker(e) {
			if(!window.confirm("Are you sure you want to submit your application?\nYou will not be able to change your information once submitted"))
				e.preventDefault()
		}
	</script>
    <hr color="gray">
    <a href="/">HOME</a>
    
</body>

</html>
